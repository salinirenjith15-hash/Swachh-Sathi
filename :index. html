        function closeBio() { document.getElementById('team-modal').classList.add('hidden'); }
        function toggleDashboard() { document.getElementById('dashboard-modal').classList.toggle('hidden'); }
        function toggleChat() { document.getElementById('ai-chat-window').classList.toggle('hidden'); }

        async function sendAIMessage() {
            const input = document.getElementById('ai-input');
            const container = document.getElementById('chat-messages');
            const text = input.value.trim();
            if(!text) return;
            container.innerHTML += `<div class="message-bubble user-msg">${text}</div>`;
            input.value = '';
            container.innerHTML += `<div class="message-bubble ai-msg italic" id="loading">Thinking...</div>`;
            try {
                const response = await callGemini(text, "You are Saathi AI. Explain Project Swachh Saathi's 3 pillars: Traceability, Bio-Safety, Circular Economy.");
                document.getElementById('loading').remove();
                container.innerHTML += `<div class="message-bubble ai-msg">${response}</div>`;
            } catch(e) { document.getElementById('loading').innerText = "Error connecting."; }
            container.scrollTop = container.scrollHeight;
        }
        
        async function quickPitch() {
            const btn = document.getElementById('pitch-btn');
            btn.innerText = "Generating...";
            try {
                const pitch = await callGemini("Summarize Project Swachh Saathi in 2 sentences.", "Pitch expert.");
                alert("‚ú® AI Pitch: " + pitch);
            } catch(e) { alert("AI unavailable."); }
            btn.innerText = "‚ú® AI Pitch";
        }
